@page "/fornecedor/historico"
@using Microsoft.AspNetCore.Authorization
@using System.Security.Claims
@using Microsoft.AspNetCore.Components.Authorization
@using RCL.Data.DTO
@using RCL.Data.Interfaces

@attribute [Authorize(Roles = "Fornecedor")]
@inject IEncomendaService EncomendaService
@inject AuthenticationStateProvider AuthProvider

<h3>Minhas Vendas</h3>

@if (vendas == null)
{
    <p>A carregar...</p>
}
else if (!vendas.Any())
{
    <div class="alert alert-info">Ainda não efetuou nenhuma venda.</div>
}
else
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Data</th>
                <th>Produto</th>
                <th>Qtd</th>
                <th>Preço Unit.</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var v in vendas)
            {
                <tr>
                    <td>@v.DataVenda.ToString("dd/MM/yyyy HH:mm")</td>
                    <td>@v.NomeProduto</td>
                    <td>@v.Quantidade</td>
                    <td>@v.PrecoUnitario.ToString("C2")</td>
                    <td>@v.Total.ToString("C2")</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<VendaFornecedorDTO>? vendas;

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthProvider.GetAuthenticationStateAsync();
        var userId = authState.User.FindFirst(c => c.Type == ClaimTypes.NameIdentifier)?.Value;

        if (!string.IsNullOrEmpty(userId))
        {
            vendas = await EncomendaService.ObterVendasDoFornecedorAsync(userId);
        }
    }
}