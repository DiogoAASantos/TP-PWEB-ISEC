@page "/historico"

@using RCL.Data.Model
@using RCL.Data.Interfaces
@using System.Security.Claims       
@using Microsoft.AspNetCore.Components.Authorization 

@inject AuthenticationStateProvider AuthProvider
@inject IEncomendaService EncomendaService
@inject NavigationManager Nav

<h2>Histórico de Encomendas</h2>

@if (encomendas == null)
{
    <p>Carregando histórico...</p>
}
else if (!encomendas.Any())
{
    <p>Você ainda não realizou nenhuma encomenda.</p>
}
else
{
    @foreach (var encomenda in encomendas)
    {
        <div class="encomenda-card">
            <h4>Encomenda #@encomenda.Id</h4>
            <p><strong>Data:</strong> @encomenda.Data_Encomenda.ToString("dd/MM/yyyy")</p>
            <p><strong>Total:</strong> @encomenda.Total €</p>
            <p><strong>Estado:</strong> @encomenda.Estado</p>

            <table class="table">
                <thead>
                    <tr>
                        <th>Produto</th>
                        <th>Quantidade</th>
                        <th>Preço Unitário</th>
                        <th>Subtotal</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in encomenda.Itens)
                    {
                        <tr>
                            <td>@item.Produto.Nome</td>
                            <td>@item.Quantidade</td>
                            <td>@item.Produto.Preco €</td>
                            <td>@(item.Produto.Preco * item.Quantidade) €</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
}

@code {
    private List<Encomenda> encomendas = new();

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthProvider.GetAuthenticationStateAsync();
        var user = authState.User;

        if (user.Identity is not null && user.Identity.IsAuthenticated)
        {
            var userId = user.FindFirst(c => c.Type == ClaimTypes.NameIdentifier)?.Value;

            if (!string.IsNullOrEmpty(userId))
            {
                encomendas = await EncomendaService.ConsultarHistoricoAsync(userId);
            }
        }
        else
        {
            Nav.NavigateTo("/login");
        }
    }
}
