@using RCL.Data.Model
@inject NavigationManager Nav

@if (Produtos == null)
{
    <div class="text-center p-5">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">A carregar...</span>
        </div>
    </div>
}
else if (!Produtos.Any())
{
    <p class="text-muted text-center">Não há produtos nesta categoria.</p>
}
else
{
    <div class="row">
        @foreach (var p in Produtos)
        {
            <div class="col-12 col-sm-6 col-lg-3 mb-4">
                <div class="card h-100 shadow-sm border-0 produto-hover-card"
                     @onclick="@(() => Nav.NavigateTo($"/produto/{p.Id}"))"
                     style="cursor: pointer;">

                    <div class="position-relative text-center" style="background-color: #f8f9fa; border-radius: 25px 25px 0 0;">

                        @if (!string.IsNullOrEmpty(p.ImagemUrl))
                        {
                            <img src="@($"https://72qc49t4-7000.uks1.devtunnels.ms{p.ImagemUrl}")"
                                 class="card-img-top p-3"
                                 alt="@p.Nome"
                                 style="border-radius: 25px; height: 200px; width: auto; object-fit: contain;">
                        }
                        else
                        {
                            <img src="@($"https://placehold.co/300x200?text={Uri.EscapeDataString(p.Nome)}")"
                                 class="card-img-top p-3"
                                 alt="@p.Nome"
                                 style="border-radius: 25px; height: 200px; object-fit: cover;">
                        }

                        @if (p.Stock > 0)
                        {
                            <span class="badge bg-success position-absolute top-0 end-0 m-3 shadow-sm">Em Stock</span>
                        }
                        else
                        {
                            <span class="badge bg-danger position-absolute top-0 end-0 m-3 shadow-sm">Esgotado</span>
                        }
                    </div>

                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title fw-bold text-dark mb-1">@p.Nome</h5>
                        <div class="mt-auto">
                            <span class="h4 fw-bold text-primary">@p.Preco.ToString("C2")</span>
                        </div>
                    </div>

                    <div class="card-footer bg-white border-top-0 pb-3">
                        <div class="d-grid gap-2">
                            <button class="btn btn-primary rounded-pill d-flex align-items-center justify-content-center gap-2 shadow-sm">
                                <i class="bi bi-eye"></i> Ver Detalhes
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}

@code {
    [Parameter]
    public List<Produto>? Produtos { get; set; }
}