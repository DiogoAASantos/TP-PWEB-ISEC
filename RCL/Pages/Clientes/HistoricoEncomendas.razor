@page "/historico"
@rendermode @(new InteractiveServerRenderMode(prerender: false))

@using RCL.Data.DTO.EncomendasDTOs
@using RCL.Data.Model
@using RCL.Data.Interfaces
@using System.Security.Claims       
@using Microsoft.AspNetCore.Components.Authorization 

@inject AuthenticationStateProvider AuthProvider
@inject IEncomendaService EncomendaService
@inject NavigationManager Nav

<h2>Histórico de Encomendas</h2>

@if (encomendas == null)
{
    <p>Carregando histórico...</p>
}
else if (!encomendas.Any())
{
    <p>Você ainda não realizou nenhuma encomenda.</p>
}
else
{
    @foreach (var encomenda in encomendas)
    {
        <div class="encomenda-card">
            <h4>Encomenda #@encomenda.Id</h4>
            <p><strong>Data:</strong> @encomenda.Data_Encomenda.ToString("dd/MM/yyyy")</p>
            <p><strong>Total:</strong> @encomenda.Total €</p>
            <p><strong>Estado:</strong> @encomenda.Estado</p>

            <table class="table">
                <thead>
                    <tr>
                        <th>Produto</th>
                        <th>Quantidade</th>
                        <th>Preço Unitário</th>
                        <th>Subtotal</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in encomenda.Itens)
                    {
                        <tr>
                            <td>@item.NomeProduto</td>
                            <td>@item.Quantidade</td>
                            <td>@item.PrecoUnitario €</td>
                            <td>@(item.PrecoUnitario * item.Quantidade) €</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
}

@code {
    private List<EncomendaDTO> encomendas = new();

    [CascadingParameter]
    private Task<AuthenticationState>? AuthStateTask { get; set; }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            if (AuthStateTask != null)
            {
                var authState = await AuthStateTask;
                var user = authState.User;

                if (user.Identity is { IsAuthenticated: true })
                {
                    await CarregarDados();
                }
                else
                {
                    Nav.NavigateTo("/login");
                }
            }
        }
    }

    private async Task CarregarDados()
    {
        try
        {
            encomendas = await EncomendaService.ConsultarHistoricoAsync();
        }
        catch (UnauthorizedAccessException)
        {
            Nav.NavigateTo("/login");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Erro: {ex.Message}");
            encomendas = new List<EncomendaDTO>();
        }
        finally
        {
            StateHasChanged();
        }
    }
}
